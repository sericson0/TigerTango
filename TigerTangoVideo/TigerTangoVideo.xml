<skin name="TigerTangoVideo" version="8" width="1920" height="1080" breaklineV="1" breaklineV2="1920"
			comment="Video Skin for Argentine Tango DJs" author="Sean Ericson" image="Logo.png" preview="preview.png">
  <copyright>Free for all to use</copyright>
  <font name="Helvetica"/>
<!--breaklineV="960"  -->
	<group name="class_defines">
		<define color="background" value="#000000"/>
		<define color="darktext" value="#d6d6d6"/>
		<define color="orangetext" value="#F5A524"/>
		<define color="darkerorange" value="#B64A12"/>
		<define color="darkertext" value="#a0a0a0"/>
		<define color="brighttext" value="white"/>
	</group>

<!-- Add Logos -->
	<logo visibility="not has_logo 'videoskin'">
		<pos x="50" y="+30"/>
		<size width="172" height="43" />
	</logo>

	<visual>
		<pos x="1920-350" y="+30"/>
		<size width="280" height="140" />
		<off x="" y=""/>
	</visual>

<!-- Panel to show the artist, title, and album art of next track -->
	<group name="nexttrack" x="+1920-350" y="+375"
			visibility="automix ? (var_equal '@$hideNextTrack' 0)">
			<cover source="automix 1" visibility="var_equal '@$hideAlbumArt' 0">
				<pos x="+0" y="+0"/>
				<size width="200" height="200"/>
			</cover>
			<textzone>
				<pos x="+0" y="+220"/>
				<size width="320" height="40"/>
				<text fontsize="28" align="left" color="darkertext" text="Next Song:"/>
			</textzone>
			<textzone group="horizontal" scroll="yes" align="left">
				<pos x="+0" y="+260"/>
				<size width="320" height="60"/>
				<text fontsize="28" color="darktext" action="get_automix_song 'artist' 1  & param_uppercase"/>
			</textzone>
			<textzone group="horizontal" scroll="yes" align="left" >
				<pos x="+0" y="+310"/>
				<size width="320" height="60"/>
				<text fontsize="28" color="orangetext" weight="bold" action="get_automix_song 'title' 1 & param_uppercase"/>
			</textzone>
	</group>

	<group name="masterdeck" x="+150" y="+40">
		<deck deck="master">
			<!-- ALbum art display. Show if hideAlbumArt is not true.
			 	 If lyrics are active and there are lyrics (comments not blank)
				 Then show for 12 seconds and then hide) -->
			<cover x="+710-400" y="+40" width="800" height="650"
				visibility="var_equal '@$hideAlbumArt'  1 ? false :
							var_equal '@$smallAlbumArt' 1 ? false :
								(var_equal '@$showLyrics' 0 ? true :
									get_comment & param_equal '' ? true :
									load_pulse_active 12000ms)"/>
				<!-- Small cover -->
				<cover x="+710-200" y="+300" width="300" height="300"
					visibility="var_equal '@$hideAlbumArt'  1 ? false :
					var_equal '@$smallAlbumArt' 0 ? false :
					(var_equal '@$showLyrics' 0 ? true :
					get_comment & param_equal '' ? true :
					load_pulse_active 12000ms)"/>

			<!-- Display Lyrics Only show if showLyrics is set to 1 and comments are not empty-->
			<group name="lyrics_panel" x="+0" y="+10"
				visibility="var_equal '@$showLyrics' 0 ? false :
								get_comment & param_equal '' ? false :
								not load_pulse_active 12000ms">
				<!-- Small text -->
				<text x="+0" y="+0" width="1920-500-60" height="710" fontsize="30" color="#EDEFF2"
						action="get_comment" align="center" multiline="yes"
						visibility="var_equal '@$lyricsFont' 2 ? true : false"
						/>
				<!-- Mid Text -->
				<text x="+0" y="+0" width="1920-500-60" height="710" fontsize="36" color="#EDEFF2"
				action="get_comment" align="center" multiline="yes"
				visibility="var_equal '@$lyricsFont' 0 ? true : false"/>
				<!-- Large Text -->
				<text x="+0" y="+0" width="1920-500-60" height="710" fontsize="44" color="#EDEFF2"
						action="get_comment" align="center" multiline="yes"
						visibility="var_equal '@$lyricsFont' 1 ? true : false"
						/>
			</group>
			<!-- scroll="yes"  -->
			<!-- Wave at bottom -->
			<blockwave deck="master" blocksize="3" zoom="2" color="#B64A12" center="center">
				<pos x="+0" y="+724" width="1920-500" height="300"/>
			</blockwave>

			<!-- Genre and tanda counter -->
			<group name="track_text" x="-75" y="+750">
				<textzone group="horizontal" align="center">
					<pos x="+0" y="+0"/>
					<size width="1920-500" height="60"/>
					<text fontsize="56" color="orangetext" weight="bold"
							action="var_equal '$songCounterRunning' 0 ?
									var_equal '@$hideGenre' 1 ? '' : (get_genre & param_uppercase) : (
										var_equal '$tandaLength' 1 ? get_text 'CORTINA' :
									(
									var_equal '@$hideGenre' 1 ? (get_text '`get_var $tandaCounter`/`get_var $tandaLength`') :
									get_text '`get_genre & param_uppercase` `get_var $tandaCounter`/`get_var $tandaLength`')
									)"/>

				</textzone>
				<!-- Track artist -->
				<textzone group="horizontal" align="center" attachX="both" scroll="yes">
					<pos x="+0" y="+75"/>
					<size width="1920-500" height="75"/>
					<text fontsize="56" color="darktext" weight="bold" action="get_artist_before_feat & param_uppercase"/>
					<text fontsize="56" color="darktext" weight="regular" action="get_featuring_after_artist & param_uppercase"/>
				</textzone>

				<!-- Track title -->
				<textzone group="horizontal" align="center" attachX="both" scroll="yes">
					<pos x="+0" y="+140"/>
					<size width="1920-500" height="100"/>
					<text fontsize="56" color="orangetext" weight="bold" action="get_title_before_remix 'clean' & param_uppercase"/>
				</textzone>
			</group>

		</deck>

	</group>


</skin>
